<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tuterdust.e_books.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fund_label"
        android:text="Fund: "
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="37dp"
        app:layout_constraintLeft_toRightOf="@+id/imageButton"
        android:layout_marginLeft="23dp" />
    <Button
        android:layout_width="67dp"
        android:layout_height="40dp"
        android:id="@+id/add_fund"
        android:text="Add"
        android:onClick="addFund"
        app:layout_constraintLeft_toRightOf="@+id/fund_label"
        android:layout_marginLeft="52dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="27dp" />
    <Button
        android:id="@+id/button2"
        android:layout_width="149dp"
        android:layout_height="52dp"
        android:onClick="goSearchActivity"
        android:text="Search"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="81dp"
        app:layout_constraintHorizontal_bias="0.502"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:layout_width="41dp"
        android:layout_height="39dp"
        android:background="@drawable/guestuser"
        android:id="@+id/imageButton"
        android:onClick="goUserActivity"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="27dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        tools:layout_editor_absoluteX="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="46dp">

        <ListView
            android:id="@+id/listview"
            android:layout_width="364dp"
            android:layout_height="290dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintTop_creator="1"
            tools:layout_editor_absoluteX="3dp"
            tools:layout_editor_absoluteY="130dp"></ListView>

    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>
